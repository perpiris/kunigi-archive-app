@model TeamCreateViewModel

@{
    ViewData["Title"] = "Δημιουργία νέας ομάδας";
    ViewData["Banner"] = "Δημιουργία νέας ομάδας";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-lg border-0 mt-2">
            <div class="card-body p-5">
                <form asp-action="Create" asp-controller="Team" method="post" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-4">
                                <label asp-for="Name" class="form-label fw-semibold"></label>
                                <input asp-for="Name" class="form-control form-control-lg"/>
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="mb-4">
                                <label class="form-label fw-semibold">Κατάσταση</label>
                                <div class="d-flex align-items-center" style="min-height: 48px;">
                                    <div class="form-check form-switch">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch"/>
                                        <label class="form-check-label" asp-for="IsActive"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-3 mt-4">
                        <a asp-controller="Team" asp-action="Manage" class="btn btn-secondary btn-lg">Πίσω</a>
                        <button type="submit" class="btn btn-primary btn-lg">Αποθήκευση</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}