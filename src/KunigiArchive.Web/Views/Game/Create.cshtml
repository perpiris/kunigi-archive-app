@model MasterGameCreateViewModel

@{
    ViewData["Title"] = "Δημιουργία νέου παιχνιδιού";
    ViewData["Banner"] = "Δημιουργία νέου παιχνιδιού";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow-lg border-0 mt-2">
            <div class="card-body p-4">
                <form asp-action="Create" asp-controller="Game" method="post" autocomplete="off" id="create-master-game-form">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Year" class="form-label fw-semibold"></label>
                                <input asp-for="Year" class="form-control" type="number" min="1900" max="2100" pattern="\d{4}" maxlength="4" oninput="this.value = this.value.slice(0,4)" />
                                <span asp-validation-for="Year" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Order" class="form-label fw-semibold"></label>
                                <input asp-for="Order" class="form-control" type="number" min="1" />
                                <span asp-validation-for="Order" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="HostTeamId" class="form-label fw-semibold"></label>
                                <select asp-for="HostTeamId" asp-items="Model.HostTeamList" class="form-select">
                                    <option value="">Επιλέξτε ομάδα</option>
                                </select>
                                <span asp-validation-for="HostTeamId" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="WinnerTeamId" class="form-label fw-semibold"></label>
                                <select asp-for="WinnerTeamId" asp-items="Model.WinnerTeamList" class="form-select">
                                    <option value="">Επιλέξτε ομάδα</option>
                                </select>
                                <span asp-validation-for="WinnerTeamId" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-controller="Game" asp-action="Manage" class="btn btn-secondary">Πίσω</a>
                        <button type="submit" class="btn btn-primary">Δημιουργία</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}