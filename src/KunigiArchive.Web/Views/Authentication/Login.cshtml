@model LoginViewModel

@{
    ViewData["Title"] = "Σύνδεση";
}

<div class="row justify-content-center">
    <div class="col-md-5 col-lg-4">
        <div class="card shadow-lg border-0 mt-5">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <h3 class="fw-bold">Σύνδεση</h3>
                </div>
                
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="Email" class="form-label fw-semibold"></label>
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="email@example.com"/>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Password" class="form-label fw-semibold"></label>
                        <input asp-for="Password" class="form-control form-control-lg" type="password" placeholder="••••••••"/>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Σύνδεση</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>