@model AccountSettingsViewModel

@{
    ViewData["Title"] = "Ρυθμίσεις Λογαριασμού";
    ViewData["Banner"] = "Ρυθμίσεις Λογαριασμού";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-9">
        <div class="card shadow-lg border-0 mt-2">
            <div class="card-body p-5">
                <div class="row">
                    <div class="col-md-4">
                        <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                            <button class="nav-link active text-start" id="v-pills-email-tab" data-bs-toggle="pill" data-bs-target="#v-pills-email" type="button" role="tab" aria-controls="v-pills-email" aria-selected="true">Email</button>
                            <button class="nav-link text-start" id="v-pills-password-tab" data-bs-toggle="pill" data-bs-target="#v-pills-password" type="button" role="tab" aria-controls="v-pills-password" aria-selected="false">Αλλαγή Κωδικού</button>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="tab-content" id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="v-pills-email" role="tabpanel" aria-labelledby="v-pills-email-tab">
                                <form id="email-form" asp-action="ChangeEmail" method="post">
                                    <div class="mb-4">
                                        <label asp-for="Email" class="form-label fw-semibold"></label>
                                        <input asp-for="Email" class="form-control form-control-lg" autocomplete="email" aria-required="true" />
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                    </div>
                                    <div class="d-grid mt-5">
                                        <button id="update-email-button" type="submit" class="btn btn-primary btn-lg">Αποθήκευση Email</button>
                                    </div>
                                </form>
                            </div>
                            <div class="tab-pane fade" id="v-pills-password" role="tabpanel" aria-labelledby="v-pills-password-tab">
                                <form id="password-form" asp-action="ChangePassword" method="post">
                                    <div class="mb-4">
                                        <label asp-for="OldPassword" class="form-label fw-semibold"></label>
                                        <input asp-for="OldPassword" class="form-control form-control-lg" type="password" placeholder="••••••••" />
                                        <span asp-validation-for="OldPassword" class="text-danger small"></span>
                                    </div>
                                    <div class="mb-4">
                                        <label asp-for="NewPassword" class="form-label fw-semibold"></label>
                                        <input asp-for="NewPassword" class="form-control form-control-lg" type="password" placeholder="••••••••" />
                                        <span asp-validation-for="NewPassword" class="text-danger small"></span>
                                    </div>
                                    <div class="mb-4">
                                        <label asp-for="ConfirmNewPassword" class="form-label fw-semibold"></label>
                                        <input asp-for="ConfirmNewPassword" class="form-control form-control-lg" type="password" placeholder="••••••••" />
                                        <span asp-validation-for="ConfirmNewPassword" class="text-danger small"></span>
                                    </div>
                                    <div class="d-grid mt-5">
                                        <button id="update-password-button" type="submit" class="btn btn-primary btn-lg">Αλλαγή Κωδικού</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}